{
    "commit-msg": {
        "enabled": false,
        "actions": []
    },
    "pre-push": {
        "enabled": false,
        "actions": []
    },
    "pre-commit": {
        "enabled": true,
        "actions": [
            {
                "action": "\\CaptainHook\\App\\Hook\\PHP\\Action\\Linting",
                "options": [],
                "conditions": [],
                "config": {
                    "label": "Lint PHP files"
                }
            },
            {
                "action": "composer exec -- php-cs-fixer fix --ansi --config .php-cs-fixer.dist.php --dry-run {$STAGED_FILES|of-type:php}",
                "options": [],
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
                        "args": ["php"]
                    }
                ],
                "config": {
                    "label": "Verify PHP coding standards"
                }
            },
            {
                "action": "composer exec -- phpstan analyze --ansi {$STAGED_FILES|of-type:php}",
                "options": [],
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileStaged\\OfType",
                        "args": ["php"]
                    }
                ],
                "config": {
                    "label": "Run PHP static analysis"
                }
            }
        ]
    },
    "prepare-commit-msg": {
        "enabled": false,
        "actions": []
    },
    "post-commit": {
        "enabled": false,
        "actions": []
    },
    "post-merge": {
        "enabled": false,
        "actions": []
    },
    "post-checkout": {
        "enabled": false,
        "actions": []
    },
    "post-rewrite": {
        "enabled": false,
        "actions": []
    },
    "post-change": {
        "enabled": true,
        "actions": [
            {
                "action": "composer install --ansi --no-scripts",
                "conditions": [
                    {
                        "exec": "\\CaptainHook\\App\\Hook\\Condition\\FileChanged\\Any",
                        "args": [["composer.lock"]]
                    }
                ],
                "config": {
                    "label": "Install/update PHP dependencies"
                }
            }
        ]
    }
}
